{
  "name": "@eclass/semantic-release-npm-github-config",
  "version": "3.0.0",
  "description": "Semantic-release shareable config for NPM with Github",
  "main": "index.js",
  "scripts": {
    "lint": "eslint . --fix",
    "format": "prettier-standard '*.js'",
    "test": "echo 'no test'"
  },
  "engines": {
    "node": ">=10"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/eclass/semantic-release-npm-github-config.git"
  },
  "keywords": [
    "github",
    "npm",
    "changelog",
    "release",
    "semantic-release",
    "semantic-release-config",
    "version"
  ],
  "author": "Leonardo Gatica <lgatica@protonmail.com> (https://about.me/lgatica)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/eclass/semantic-release-npm-github-config/issues"
  },
  "homepage": "https://github.com/eclass/semantic-release-npm-github-config#readme",
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "8.3.4",
    "@commitlint/config-conventional": "8.3.4",
    "@eclass/eslint-config": "1.3.0",
    "@semantic-release/changelog": "3.0.6",
    "@semantic-release/git": "8.0.0",
    "eslint": "6.8.0",
    "eslint-plugin-array-func": "3.1.3",
    "eslint-plugin-eslint-comments": "3.1.2",
    "eslint-plugin-import": "2.20.0",
    "eslint-plugin-jsdoc": "20.3.1",
    "eslint-plugin-node": "11.0.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-security": "1.4.0",
    "eslint-plugin-sonarjs": "0.5.0",
    "eslint-plugin-standard": "4.0.1",
    "husky": "4.0.9",
    "lint-staged": "9.5.0",
    "prettier-standard": "16.1.0",
    "semantic-release": "16.0.1"
  },
  "peerDependencies": {
    "@semantic-release/changelog": "^3.0.0",
    "@semantic-release/git": "^7.0.4 || ^8.0.0",
    "semantic-release": "^15.9.0 || ^16.0.0"
  },
  "eslintConfig": {
    "extends": "@eclass"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier-standard",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "renovate": {
    "extends": [
      "config:js-lib"
    ],
    "minor": {
      "automerge": true
    },
    "major": {
      "automerge": false
    }
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  }
}
