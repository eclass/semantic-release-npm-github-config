{
  "name": "@eclass/semantic-release-npm-github-config",
  "version": "4.0.0",
  "description": "Semantic-release shareable config for NPM with Github",
  "main": "index.js",
  "scripts": {
    "lint": "eslint . --fix",
    "format": "prettier-standard '*.js'",
    "test": "echo 'no test'"
  },
  "engines": {
    "node": ">=14"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/eclass/semantic-release-npm-github-config.git"
  },
  "keywords": [
    "github",
    "npm",
    "changelog",
    "release",
    "semantic-release",
    "semantic-release-config",
    "version"
  ],
  "author": "Leonardo Gatica <lgatica@protonmail.com> (https://about.me/lgatica)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/eclass/semantic-release-npm-github-config/issues"
  },
  "homepage": "https://github.com/eclass/semantic-release-npm-github-config#readme",
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@eclass/eslint-config": "^2.0.1",
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/git": "^10.0.0",
    "eslint": "^7.28.0",
    "eslint-plugin-array-func": "^3.1.7",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jsdoc": "^32.3.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-sonarjs": "^0.6.0",
    "eslint-plugin-standard": "^4.1.0",
    "husky": "^4.3.0",
    "lint-staged": "^11.2.3",
    "prettier-standard": "^16.4.1",
    "semantic-release": "^18.0.0"
  },
  "peerDependencies": {
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/git": "^10.0.0",
    "semantic-release": "^18.0.0"
  },
  "eslintConfig": {
    "extends": "@eclass"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier-standard",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "renovate": {
    "extends": [
      "config:js-lib"
    ],
    "minor": {
      "automerge": true
    },
    "major": {
      "automerge": false
    }
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  }
}
